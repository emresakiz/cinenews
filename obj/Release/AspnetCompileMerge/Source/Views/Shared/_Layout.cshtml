<!DOCTYPE html>
<html lang="en">
<head>
    @Styles.Render("Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>BEE Sinema Bilgi ve Haber Portalı</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/shop-homepage.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />
    
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'><img src="~/Content/logo.png" width="50" height="50" /></a><span style="font-weight:800; font-size:24px; margin-left:5px;">SİNEMA PORTALI</span>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav nav-pills">
                        <li role="presentation">@Html.ActionLink(SinemaBilgi.Resources.Language.Anasayfa, "Index", "Home")</li>
                        <li role="presentation">@Html.ActionLink(SinemaBilgi.Resources.Language.Vizyondakiler, "Vizyonda", "Home")</li>
                        <li role="presentation">@Html.ActionLink(SinemaBilgi.Resources.Language.Fragmanlar, "Fragmanlar", "Home")</li>
                        <li role="presentation">@Html.ActionLink(SinemaBilgi.Resources.Language.Yakında, "Yakinda", "Home")</li>
                        <li role="presentation">@Html.ActionLink(SinemaBilgi.Resources.Language.Haberler, "Haberler", "Home")</li>
                        <li role="presentation" class="user">@Html.Partial("../Shared/_LoginPartial")</li>
                    </ul>
                </div>
                </ul>
</div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <div class="panel panel-default">
                        <div class="panel-heading">@SinemaBilgi.Resources.Language.Dil_Seçin</div>
                        <div class="jumbotron" style="border-radius:0px; background-color:white; padding:10px;">
                            <ul class="nav nav-pills nav-stacked">
                                <li role="presentation"><a href='@Url.Action("Index", "Language", new {lang="tr"})'><img src="~/Content/tr.png" width="30" height="20" /><span style="margin-left:15px; font-size:15px;">Türkçe</span></a></li>
                                <li role="presentation"><a href='@Url.Action("Index", "Language", new {lang="en"})'><img src="~/Content/en.png" width="30" height="20" /><span style="margin-left:15px; font-size:15px;">English</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                @Html.Partial("../Partial/_hf")
                @Html.Partial("../Partial/_yakinda")
                @Html.Partial("../Partial/_Vizyondakiler")
                <div class="panel panel-default">
                    <div class="panel-heading">@SinemaBilgi.Resources.Language.Sosyal_Medya</div>
                    <div class="jumbotron" style="border-radius:0px; background-color:white; padding:10px;">
                        <ul class="nav nav-pills nav-stacked">
                            <li role="presentation"><a href="#">Facebook</a></li>
                            <li role="presentation"><a href="#">Twitter</a></li>
                            <li role="presentation"><a href="#">Instagram</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="container">
        <hr>
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Emre SAKIZ 2015</p>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/Script/js/jquery.js"></script>
    <script src="~/Script/js/bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)


</body>
</html>
